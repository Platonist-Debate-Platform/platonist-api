{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "name": "Author",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "firstName": {
      "type": "string",
      "required": true
    },
    "lastName": {
      "type": "string",
      "required": true
    },
    "jobTitle": {
      "type": "string"
    },
    "phone": {
      "type": "string",
      "regex": "(([+][(]?[0-9]{1,3}[)]?)|([(]?[0-9]{4}[)]?))\\s*[)]?[-\\s\\.]?[(]?[0-9]{1,3}[)]?([-\\s\\.]?[0-9]{3})([-\\s\\.]?[0-9]{3,4})",
      "unique": false
    },
    "active": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "homepage": {
      "model": "homepage",
      "via": "admin"
    },
    "about": {
      "type": "richtext"
    },
    "shortDescription": {
      "type": "text",
      "required": true
    },
    "email": {
      "type": "email",
      "default": "info@globalct.com"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user"
    }
  }
}
